<form method="<%= method %>" action="<%= url %>">
  <div class="field">
    <label class="label">Nome</label>
    <div class="control">
      <input
        class="input"
        type="text"
        name="checklist[name]"
        placeholder="Lista de Tarefas"
        value="<%= checklist.name %>"
      />
    <% if(checklists.err && checklist.err.hasOwnProperty('name')) { %>
      <p class="is-danger help"><% checkilist.err.name.message %></p>
    <% } %>
    </div>
  </div>

  <button type="submit" class="button is-success">Salvar</button>
  <a href="/checklists" class="button">Cancelar</a>
</form>
